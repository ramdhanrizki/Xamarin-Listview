<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="List_Universitas.View.DetailUniversitas"
             Title="{Binding Description}"
             >
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Orientation="Vertical" Margin="10,10,10,10">
                <Image x:Name="logo" Source="{Binding Gambar}" WidthRequest="200" HeightRequest="200"></Image>
                <Label x:Name="lblNama" Margin="0,10,0,0" FontSize="24"  Text="{Binding Description}"
                        HorizontalTextAlignment="Center"/>
                <Label Text="Info : " Margin="0,10,0,0" FontSize="20"/>
                <Label LineBreakMode="WordWrap" x:Name="lblInfo" Margin="0,8,0,0 " Text="{Binding Detail}"/>
                <Button x:Name="btnBack" Text="Kembali" Margin="0,25,0,0"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
    
</ContentPage>